<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="@dimen/dimens_16dp"
    android:layout_marginVertical="@dimen/dimens_16dp"
    android:layout_marginHorizontal="@dimen/dimens_10dp">
    <LinearLayout
        style="@style/LinearVerticalWrapAll"
        android:foreground="?selectableItemBackground">
        <ImageView
            android:id="@+id/iv_item"
            android:layout_height="@dimen/dimens_240dp"
            android:layout_width="@dimen/dimens_160dp"
            android:elevation="@dimen/dimens_4dp"/>
        <LinearLayout
            style="@style/LinearVerticalWrap"
            android:layout_margin="@dimen/dimens_16dp">
            <TextView
                android:id="@+id/tv_title"
                style="@style/TextTitleBig"
                android:text="@string/text_lorem_ipsum"
                android:maxLines="1"
                android:minLines="1"
                android:ellipsize="end"
                android:textStyle="bold"/>
            <RatingBar
                android:id="@+id/rating"
                style="@style/RatingBarSmall"
                android:layout_marginTop="@dimen/dimens_10dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>