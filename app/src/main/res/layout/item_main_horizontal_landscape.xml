<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LinearVerticalWrapAll"
    android:layout_marginVertical="@dimen/dimens_16dp"
    android:layout_marginStart="@dimen/dimens_16dp"
    android:foreground="?selectableItemBackground">
    <ImageView
        android:id="@+id/iv_item"
        android:layout_width="@dimen/dimens_150dp"
        android:layout_height="@dimen/dimens_100dp"
        android:elevation="@dimen/dimens_4dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/dimens_10dp">
        <RatingBar
            android:id="@+id/rating"
            style="@style/RatingBarSmall"/>
        <TextView
            android:id="@+id/tv_title"
            style="@style/TextTitleBig"
            android:layout_width="match_parent"
            android:text="@string/text_lorem_ipsum"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dimens_10dp"
            android:maxLines="2"
            android:minLines="2"
            android:ellipsize="end"/>
    </LinearLayout>
</LinearLayout>